const { categorieValidator } = require ("../middlewares/validators");

const express = require('express');

const { createCategorie, 
        getAllCategories,  
        getCategorieById, 
        updateCategorieById, 
        deleteCategorieById, 
        } = require("../controllers/categorieController");

const categorieRoutes = express.Router()

categorieRoutes.post("/",categorieValidator.create, createCategorie)
categorieRoutes.get("/", getAllCategories);
categorieRoutes.get("/:id",categorieValidator.getById, getCategorieById);
categorieRoutes.put("/:id",categorieValidator.update, updateCategorieById);
categorieRoutes.delete("/:id",categorieValidator.delete, deleteCategorieById);

module.exports = categorieRoutes;